{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "matchManagers": ["cocoapods"],
            "addLabels": ["cocoapods"]
        },
        {
            "matchManagers": ["circleci"],
            "addLabels": ["circle-ci"]
        },
        {
            "matchManagers": ["ruby-version"],
            "addLabels": ["ruby"]
        }
    ]
}
